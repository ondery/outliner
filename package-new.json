{
  "name": "typescript-outline-enhancer",
  "displayName": "TypeScript Outline Enhancer",
  "description": "Enhances TypeScript outline with customizable emoji icons for visibility and modifiers",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Programming Languages", "Other"],
  "activationEvents": ["onLanguage:typescript"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "typescript-outline-enhancer.refresh",
        "title": "Refresh TypeScript Outline",
        "icon": "$(refresh)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "tsOutlineEnhancer",
          "name": "TypeScript Enhanced Outline",
          "when": "resourceLangId == typescript",
          "icon": "$(symbol-class)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "typescript-outline-enhancer.refresh",
          "when": "view == tsOutlineEnhancer",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "TypeScript Outline Enhancer",
      "properties": {
        "tsOutlineEnhancer.showIconsInLabel": {
          "type": "boolean",
          "default": true,
          "description": "Show emoji icons in labels for visibility and modifiers"
        },
        "tsOutlineEnhancer.showVisibilityInLabel": {
          "type": "boolean",
          "default": false,
          "description": "Show visibility (public/private/protected) in the label"
        },
        "tsOutlineEnhancer.emojis.public": {
          "type": "string",
          "default": "🌐",
          "description": "Emoji for public members. Try: 🌐, 🟢, ✅, 📢, 🔓, 🆔, 👥, 📡"
        },
        "tsOutlineEnhancer.emojis.private": {
          "type": "string",
          "default": "🔒",
          "description": "Emoji for private members. Try: 🔒, 🔴, ❌, 🚫, 👁️‍🗨️, 🔐, 🕳️, 🖤"
        },
        "tsOutlineEnhancer.emojis.protected": {
          "type": "string",
          "default": "🛡️",
          "description": "Emoji for protected members. Try: 🛡️, 🟡, ⚠️, 🔰, 🛃, 🟧, 🔶, 🧡"
        },
        "tsOutlineEnhancer.emojis.static": {
          "type": "string",
          "default": "📌",
          "description": "Emoji for static members. Try: 📌, 📍, 🔧, 🏗️, 🎯, 🔩, ⚙️, 🛠️"
        },
        "tsOutlineEnhancer.emojis.readonly": {
          "type": "string",
          "default": "📖",
          "description": "Emoji for readonly members. Try: 📖, 👁️, 🔍, 📋, 📄, 👀, 🔎, 📚"
        },
        "tsOutlineEnhancer.emojis.abstract": {
          "type": "string",
          "default": "🎭",
          "description": "Emoji for abstract members. Try: 🎭, 💭, 🔮, 👻, 🌟, 💫, 🪄, 🌀"
        },
        "tsOutlineEnhancer.emojis.async": {
          "type": "string",
          "default": "⚡",
          "description": "Emoji for async members. Try: ⚡, 🚀, 🔄, ⏳, 💫, 🌀, 🔥, ⏰"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}
