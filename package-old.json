{
  "name": "typescript-outline-enhancer",
  "displayName": "TypeScript Outline Enhancer",
  "description": "Enhances TypeScript outline with method visibility icons and colors",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "typescript-outline-enhancer.refresh",
        "title": "Refresh TypeScript Outline",
        "icon": "$(refresh)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "tsOutlineEnhancer",
          "name": "TypeScript Enhanced Outline",
          "when": "resourceLangId == typescript",
          "icon": "$(symbol-class)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "typescript-outline-enhancer.refresh",
          "when": "view == tsOutlineEnhancer",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "TypeScript Outline Enhancer",
      "properties": {
        "tsOutlineEnhancer.showIconsInLabel": {
          "type": "boolean",
          "default": true,
          "description": "Show emoji icons in labels for visibility and modifiers"
        },
        "tsOutlineEnhancer.showVisibilityInLabel": {
          "type": "boolean",
          "default": false,
          "description": "Show visibility (public/private/protected) in the label"
        },
        "tsOutlineEnhancer.emojis.public": {
          "type": "string",
          "default": "🌐",
          "description": "Emoji for public members (e.g., 🌐, 🟢, ✅, 📢, 🔓)"
        },
        "tsOutlineEnhancer.emojis.private": {
          "type": "string", 
          "default": "🔒",
          "description": "Emoji for private members (e.g., 🔒, 🔴, ❌, 🚫, 👁️‍🗨️)"
        },
        "tsOutlineEnhancer.emojis.protected": {
          "type": "string",
          "default": "🛡️", 
          "description": "Emoji for protected members (e.g., 🛡️, 🟡, ⚠️, 🔰, 🛃)"
        },
        "tsOutlineEnhancer.emojis.static": {
          "type": "string",
          "default": "📌",
          "description": "Emoji for static members (e.g., 📌, 📍, 🔧, 🏗️, 🎯)"
        },
        "tsOutlineEnhancer.emojis.readonly": {
          "type": "string",
          "default": "📖",
          "description": "Emoji for readonly members (e.g., 📖, 👁️, 🔍, 📋, 📄)"
        },
        "tsOutlineEnhancer.emojis.abstract": {
          "type": "string",
          "default": "🎭",
          "description": "Emoji for abstract members (e.g., 🎭, 💭, 🔮, 👻, 🌟)"
        },
        "tsOutlineEnhancer.emojis.async": {
          "type": "string",
          "default": "⚡",
          "description": "Emoji for async members (e.g., ⚡, 🚀, 🔄, ⏳, 💫)"
        }
          "type": "string",
          "default": "triangle-right",
          "description": "Icon for protected members",
          "enum": [
            "shield",
            "triangle-right",
            "triangle-up",
            "warning",
            "alert",
            "info"
          ]
        },
        "tsOutlineEnhancer.icons.public": {
          "type": "string",
          "default": "symbol-method",
          "description": "Icon for public members",
          "enum": [
            "symbol-method",
            "circle",
            "check",
            "add",
            "plus",
            "globe"
          ]
        },
        "tsOutlineEnhancer.icons.readonly": {
          "type": "string",
          "default": "eye",
          "description": "Icon for readonly members",
          "enum": [
            "eye",
            "book",
            "file",
            "lock",
            "circle-outline"
          ]
        },
        "tsOutlineEnhancer.icons.static": {
          "type": "string",
          "default": "symbol-constant",
          "description": "Icon for static members",
          "enum": [
            "symbol-constant",
            "symbol-numeric",
            "pin",
            "star",
            "bookmark"
          ]
        },
        "tsOutlineEnhancer.icons.abstract": {
          "type": "string",
          "default": "symbol-misc",
          "description": "Icon for abstract members",
          "enum": [
            "symbol-misc",
            "question",
            "circle-outline",
            "lightbulb",
            "puzzle"
          ]
        },
        "tsOutlineEnhancer.icons.async": {
          "type": "string",
          "default": "sync",
          "description": "Icon for async members",
          "enum": [
            "sync",
            "loading",
            "clock",
            "rocket",
            "symbol-event"
          ]
        },
        "tsOutlineEnhancer.colors.private": {
          "type": "string",
          "default": "errorForeground",
          "description": "Color for private members",
          "enum": [
            "errorForeground",
            "warningForeground",
            "charts.red",
            "charts.orange",
            "descriptionForeground"
          ]
        },
        "tsOutlineEnhancer.colors.protected": {
          "type": "string",
          "default": "warningForeground",
          "description": "Color for protected members",
          "enum": [
            "warningForeground",
            "charts.orange",
            "charts.yellow",
            "debugConsole.warningForeground"
          ]
        },
        "tsOutlineEnhancer.colors.public": {
          "type": "string",
          "default": "",
          "description": "Color for public members (empty for default)"
        },
        "tsOutlineEnhancer.colors.readonly": {
          "type": "string",
          "default": "charts.blue",
          "description": "Color for readonly members",
          "enum": [
            "charts.blue",
            "debugConsole.infoForeground",
            "charts.purple"
          ]
        },
        "tsOutlineEnhancer.colors.static": {
          "type": "string",
          "default": "charts.purple",
          "description": "Color for static members",
          "enum": [
            "charts.purple",
            "charts.blue",
            "debugConsole.sourceForeground"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2"
  }
}
